generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


enum Sex {
  Masculino
  Feminino
}


model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String        @unique
  email       String        @unique
  age         Int
  phone       String
  live        String
  sex         Sex           @default(Masculino)
  profission  Profission[]  @relation("userProfission")
  created_at  DateTime      @default(now())
  updated_at  DateTime      @default(now())

  @@map("users")
}

model Profission {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  company   String
  position  String
  wage      String
  area      String
  user      User    @relation(fields: [user_id], references: [id], name: "userProfission")
  user_id   String  @db.ObjectId

  @@map("profission")
}
